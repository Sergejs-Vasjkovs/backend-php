{
    "name": "backend-php/products-api",
    "description": "Modern REST API for products management",
    "type": "project",
    "version": "1.0.0",
    "require": {
        "php": "^8.1",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^6.4",
        "laminas/laminas-diactoros": "^3.3",
        "vlucas/phpdotenv": "^5.6",
        "predis/predis": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "minimum-stability": "stable"
}
